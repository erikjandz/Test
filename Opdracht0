//opdracht 0
#include <iostream>
#include <string>

using namespace std;

int main(){
    string text;
    int rot;
    cout << "Geef een string" << endl;
    getline(cin,text);
    cout << "Hoeveeel characters wil je verplaatsen?" << endl;
    cin >> rot;
    for(int i = 0;i < text.size();i++){
        cout << char(int(text[i]) + rot);
    }
    cout << endl;
}

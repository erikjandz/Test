#include <iostream>
#include <string>

using namespace std;

void new_file(){
        string name;
        string text;
        string command = "sudo touch ";
        string command2;
        const char* command3;
        const char* command4;
        cout << "Wat wordt de naam van de file?" << endl;
        cin >> name;
        cout << "Wat wil je in de file zetten?" << endl;
        getline(cin,text);
        command += string(name);
        command2 = string(text) + " >> " + string(name);
        command3 = command.c_str();
        command4 = command2.c_str();
        system(command3);
        system(command4);
}

void list(){
        system("ls -la");
}

void find(){
        string invoer;
        string command;
        const char* command2;
        cout << "geef een string" <<  endl;
        cin >> invoer;
        command = "find | grep "  + invoer;
        command2 = command.c_str();
        system(command2);
}

void python(){
        system("python");
}


int main(){
        string input;
        while(true){
                system("cat prompt.txt");
                getline(cin, input);
                if(input == "new_file"){
                        new_file();
                }
                if(input == "ls"){
                        list();
                }
                if(input == "find"){
                        find();
                }
                if(input == "python"){
                        python();
                }
                if(input == "quit"){
                        return 0;
                }
                if(input == "error"){
                        return 1;
                }

        }
}
                
